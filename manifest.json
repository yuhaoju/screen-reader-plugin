{
  "name": "Screen Reader",
  "version": "0.1",
  "description": "Screen Reader",
  "background": {
    "scripts": ["src/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": ["src/reader.js"]
    }
  ],
  "page_action": {
    "default_popup": "dist/popup.html",
    "default_icon": {
      "16": "src/ui/images/get_started16.png",
      "32": "src/ui/images/get_started32.png",
      "48": "src/ui/images/get_started48.png",
      "128": "src/ui/images/get_started128.png"
    }
  },
  "icons": {
    "16": "src/ui/images/get_started16.png",
    "32": "src/ui/images/get_started32.png",
    "48": "src/ui/images/get_started48.png",
    "128": "src/ui/images/get_started128.png"
  },
  "permissions": ["declarativeContent", "storage"],
  "manifest_version": 2
}